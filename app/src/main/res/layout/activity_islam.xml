<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".IslamActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/masjid1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="110dp"
            android:id="@+id/v_fliper"
            android:layout_centerHorizontal="true">
        </ViewFlipper>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/peta1"
            android:id="@+id/petaislam"
            android:layout_below="@id/v_fliper"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/list1"
            android:id="@+id/listislam"
            android:layout_below="@id/v_fliper"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</RelativeLayout>
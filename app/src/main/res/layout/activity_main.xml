<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/menuutama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/menuutama1"
            />

        <ImageView
            android:id="@+id/islam"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/islam1" />

        <ImageView
            android:id="@+id/hindu"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="170dp"
            android:src="@drawable/hindu1" />

        <ImageView
            android:id="@+id/kristen"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/kristen1" />

        <ImageView
            android:id="@+id/katolik"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="275dp"
            android:src="@drawable/katolik1" />

        <ImageView
            android:id="@+id/buddha"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="355dp"
            android:src="@drawable/buddha1" />

        <ImageView
            android:id="@+id/konghucu"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="385dp"
            android:src="@drawable/konghucu1" />
    </RelativeLayout>


</RelativeLayout>